<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bit.dickaj1.lastfmapi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TopArtistsActivity"
            android:label="@string/title_activity_top_artists"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".UserSearchActivity"
            android:label="@string/title_activity_user_search"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".DisplayImageActivity"
            android:label="@string/title_activity_display_image"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>
